{
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "@id": "{{ canonical_url }}",
  "url": "{{ canonical_url }}",
  "headline": "{{ entry.title }}",
  "description": "{% if entry.meta_description %}{{ entry.meta_description }}{% else %}{{ entry.summary }}{% endif %}",
  "datePublished": "{{ entry.release_date }}",
  "dateModified": "{{ build_date }}",
  "inLanguage": "{{ lang }}",
  "author": {"@id": "https://withframes.com/#vincent-tantardini"},
  "publisher": {
    "@id": "https://withframes.com/#organization"
  }{% if first_image %},
  "image": {
    "@type": "ImageObject",
    "url": "https://withframes.com{{ first_image }}",
    "width": "{{ image_width }}",
    "height": "{{ image_height }}"
  }{% endif %}
}
